
.status-message.error {
  color: #C63;
}
.status-message.warn {
  color: #A63;
}
.status-message.success {
  color: #565;
}
.status-message.info {
  color: #999;
}
.status-message.success, .status-message.info, .status-message.error, .status-message.warn {
  transition: none;
}
.status-message {
  color: #666;
  background-color: #111;
  transition: 0.5s;
}


